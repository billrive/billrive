        </dependency>
        <dependency>
            <groupId>com.thetransactioncompany</groupId>
            <artifactId>cors-filter</artifactId>
            <version>1.6</version>
        </dependency>
        
        <dependency>
  		<groupId>org.hibernate.javax.persistence</groupId>
